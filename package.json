{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "tsc --noEmit",
    "dev": "nodemon src/entry.ts",
    "dev:debug": "nodemon --inspect=127.0.0.1:9229 src/entry.ts",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "start": "node ./dist/entry.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@swc/core": "^1.3.11",
    "@swc/helpers": "^0.4.12",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
