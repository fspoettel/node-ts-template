{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "swc src -d dist",
    "check": "tsc --noEmit",
    "dev": "nodemon src/main.ts",
    "dev:debug": "nodemon --inspect=127.0.0.1:9229 src/main.ts",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "start": "node ./dist/main.js",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.40",
    "@swc/helpers": "0.4.14",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.5",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "prettier": "2.8.6",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "dotenv": "16.0.3"
  }
}
