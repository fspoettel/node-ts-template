{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run clean && swc src -d dist",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false ./src/main.ts | pino-pretty",
    "dev:debug": "tsx watch --inspect --clear-screen=false ./src/main.ts | pino-pretty",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "start": "node ./dist/main.js",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest --watch"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.63",
    "@swc/jest": "0.2.27",
    "@types/jest": "29.5.3",
    "@types/node": "18.17.0",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "jest": "29.6.1",
    "pino-pretty": "10.0.0",
    "prettier": "3.0.0",
    "ts-node": "10.9.1",
    "tsx": "3.12.7",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "pino": "8.14.1"
  }
}
