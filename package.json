{
  "name": "node-ts-template",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "20.9.0"
  },
  "scripts": {
    "build": "npm run clean && swc src -d dist",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false ./src/main.ts | pino-pretty",
    "dev:debug": "tsx watch --clear-screen=false --inspect ./src/main.ts | pino-pretty",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "prepare": "husky install",
    "start": "node ./dist/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.96",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "@vitest/coverage-v8": "0.34.6",
    "eslint": "8.53.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "pino-pretty": "10.2.0",
    "prettier": "3.1.0",
    "tsx": "4.1.2",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "pino": "8.15.1"
  }
}
