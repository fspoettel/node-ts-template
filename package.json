{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run clean && swc src -d dist",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "dev": "nodemon src/main.ts | pino-pretty",
    "dev:debug": "nodemon --inspect=127.0.0.1:9229 src/main.ts",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "start": "node ./dist/main.js",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "^1.3.63",
    "@swc/helpers": "0.5.1",
    "@swc/jest": "0.2.26",
    "@types/jest": "^29.5.2",
    "@types/node": "18.16.19",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.45.0",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "pino-pretty": "^10.0.0",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "pino": "^8.14.1"
  }
}
