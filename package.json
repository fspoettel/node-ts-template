{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "build": "npm run clean && swc src -d dist",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "dev": "node --watch --no-warnings --loader=tsx ./src/main.ts | pino-pretty",
    "dev:debug": "node --watch --no-warnings --loader=tsx --inspect ./src/main.ts | pino-pretty",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "prepare": "husky install",
    "start": "node ./dist/main.js",
    "test": "glob -c \"NODE_ENV=test node --test --no-warnings --loader=tsx\" \"./src/**/*.test.ts\"",
    "test:coverage": "glob -c \"NODE_ENV=test c8 --reporter=lcov node --test --no-warnings --loader=tsx\" \"./src/**/*.test.ts\"",
    "test:watch": "glob -c \"NODE_ENV=test node --test --watch --no-warnings --loader=tsx\" \"./src/**/*.test.ts\""
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.70",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "c8": "8.0.0",
    "eslint": "8.45.0",
    "glob": "10.3.3",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "pino-pretty": "10.1.0",
    "prettier": "3.0.0",
    "tsx": "3.12.7",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "pino": "8.14.1",
    "undici": "5.22.1"
  }
}
