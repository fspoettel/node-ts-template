{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "build": "npm run clean && swc src -d dist",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false ./src/main.ts | pino-pretty",
    "dev:debug": "tsx watch --inspect --clear-screen=false ./src/main.ts | pino-pretty",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "start": "node ./dist/main.js",
    "test": "NODE_ENV=test tsx --test **/*.test.ts",
    "test:watch": "NODE_ENV=test tsx --watch --test **/*.test.ts"
  },
  "devDependencies": {
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.70",
    "@types/node": "20.4.4",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "pino-pretty": "10.1.0",
    "prettier": "3.0.0",
    "tsx": "3.12.7",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "pino": "8.14.1"
  }
}
