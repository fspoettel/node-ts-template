{
  "name": "node-ts-template",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "20.12.0"
  },
  "scripts": {
    "build": "npm run clean && swc src -d dist",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false ./src/main.ts | pino-pretty",
    "dev:debug": "tsx watch --clear-screen=false --inspect ./src/main.ts | pino-pretty",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "prepare": "husky",
    "start": "node ./dist/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@swc/cli": "0.3.10",
    "@swc/core": "1.4.8",
    "@types/node": "20.11.30",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "@vitest/coverage-v8": "1.4.0",
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "pino-pretty": "10.3.1",
    "prettier": "3.2.5",
    "tsx": "4.7.1",
    "typescript": "5.4.2",
    "vitest": "1.4.0"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "pino": "8.19.0"
  }
}
