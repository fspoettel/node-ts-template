{
  "name": "node-typescript-starter",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "tsc --noEmit",
    "dev": "nodemon src/main.ts",
    "dev:debug": "nodemon --inspect=127.0.0.1:9229 src/main.ts",
    "fmt": "prettier --write .",
    "lint": "eslint src",
    "start": "node ./dist/entry.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@swc-node/register": "1.6.2",
    "@swc/core": "1.3.40",
    "@swc/helpers": "0.4.14",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.3",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "jest": "29.5.0",
    "nodemon": "2.0.21",
    "prettier": "2.8.4",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "dotenv": "16.0.3"
  }
}
